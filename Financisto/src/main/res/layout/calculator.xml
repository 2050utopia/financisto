<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result"
            style="@android:style/Widget.Holo.Light.EditText"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:gravity="right"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/balance_amount"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-2dp"
            android:text=""
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/b8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/b9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bAdd"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="+"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bClear"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="C"
            android:textColor="#f26522"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/b5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/b6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bSubtract"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bDelete"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="&lt;"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/b2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/b3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bMultiply"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="*"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bPercent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="%"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/b0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bPlusMinus"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="Â±"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bDot"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/bDivide"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="/"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bResult"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:minHeight="@dimen/calculator_button_height"
            android:minWidth="@dimen/calculator_button_width"
            android:text="="
            android:textColor="#39b54a"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <include layout="@layout/ok_cancel_buttons" />


</LinearLayout>
